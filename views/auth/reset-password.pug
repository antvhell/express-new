extends ../layout/index
block contenido
    .container
        .row.text-center
            .col.mt-4
                h1.fw-bold Guía Práctica de Fonética
                img(src="../../public/img/guia2.svg", alt="Guía Práctica de Fonética")
        .row.mt-4.text-center
            .col-12.mt-4
                h2=pagina
        .row.align-items-center.justify-content-center
            .col-sm-12.col-md-6.col-lg-6.mt-4
                if errores
                    div(class="text-center")
                        each error in errores
                            p.alert.alert-danger= error.msg

        .row.align-items-center.justify-content-center
            .col-sm-12.col-md-6.col-lg-6.mt-4
                form(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    .row.mb-3
                        label.col-sm-4.col-form-label(for='password') Nuevo password
                        .col-sm-8
                            input#password.form-control(placeholder="Nuevo password" type="password" name="password")

                    
                    

                    .row.mb-3

                        button.btn.btn-primary(type='submit') Guardar