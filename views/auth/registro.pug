extends ../layout/index
block contenido
    .container
        .row.text-center
            .col.mt-4
                h1.fw-bold Guía Práctica de Fonética
                img(src="../../public/img/guia2.svg", alt="Guía Práctica de Fonética")
        .row.mt-4.text-center
            .col-12.mt-4
                h2=pagina
        

        .row.align-items-center.justify-content-center
            .col-sm-12.col-md-6.col-lg-6.mt-4
                if errores
                    div(class="text-center")
                        each error in errores
                            p.alert.alert-danger= error.msg
        .row.align-items-center.justify-content-center
            .col-sm-12.col-md-6.col-lg-6.mt-4
                form(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    .row.mb-3
                        label.col-sm-4.col-form-label(for='nombre') Tu nombre
                        .col-sm-8
                            input#nombre.form-control(placeholder="Nombre" type="text" name="nombre" value=usuario ? usuario.nombre : '')

                    .row.mb-3
                        label.col-sm-4.col-form-label(for='email') Email de registro
                        .col-sm-8
                            input#email.form-control(placeholder="Email" type="text" name="email" value=usuario ? usuario.email : '')

                    .row.mb-3
                        label.col-sm-4.col-form-label(for='password') Password
                        .col-sm-8
                            input#password.form-control(placeholder="Password" type="password" name="password")

                    .row.mb-3
                        label.col-sm-4.col-form-label(for='repetir_password') Repetir password
                        .col-sm-8
                            input#repetir_password.form-control(placeholder="Repetir Password" type="password" name="repetir_password")

                    .d-flex.mb-3.mt-4.justify-content-between.fw-light
                        a.text-decoration-none(href='/auth/login') ¿Ya tienes cuenta? Inicia sesión
                        a.text-decoration-none(href='/auth/olvide-password') Olvide mi password
                    .row.mb-3
                        button.btn.btn-primary(type='submit') Crear cuenta